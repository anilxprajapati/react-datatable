{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
 
  "exclude": ["src/__tests__/**/*", "dist"]
}